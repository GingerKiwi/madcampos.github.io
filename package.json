{
	"name": "madcampos",
	"private": true,
	"version": "1.0.0",
	"displayName": "Marco Campos",
	"shortName": "MADCampos",
	"description": "Personal website for Marco Campos",
	"homepage": "https://madcampos.dev",
	"keywords": [
		"personal",
		"website",
		"developer",
		"node.js",
		"typescript",
		"webdev"
	],
	"author": {
		"name": "madcampos",
		"email": "madcampos@outlook.com"
	},
	"license": "MIT",
	"browser": "./dist/index.html",
	"type": "module",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/madcampos/madcampos.github.io.git"
	},
	"engines": {
		"node": ">=17.0.0"
	},
	"volta": {
		"node": "17.3.0"
	},
	"scripts": {
		"postinstall": "husky install",
		"start": "vite",
		"start:sw": "vite",
		"typecheck": "tsc --noEmit",
		"lint:js": "eslint src --ext .js,.mjs,.ts,.mts --fix --ignore-path .gitignore",
		"lint:css": "stylelint **/*.css --fix",
		"lint": "npm run typecheck && npm run lint:js && npm run lint:css",
		"lint-staged": "lint-staged",
		"prebuild:app": "npm run lint",
		"build:app": "vite build",
		"build:icons-transparent": "pwa-asset-generator build/logo.html --type png --maskable false --icon-only --scrape false --dark-mode --opaque false --log false public/icons/transparent",
		"build:icons-maskable": "pwa-asset-generator build/logo.html --type png --maskable false --icon-only --log false public/icons/maskable",
		"build:splash": "pwa-asset-generator build/logo.html --type png --splash-only --log false public/splash",
		"build:assets": "npm run build:icons-transparent && npm run build:icons-maskable && npm run build:splash",
		"prepreview": "npm run build:app",
		"preview": "vite preview --port 3000",
		"test": "vitest",
		"test:coverage": "vitest run --coverage"
	},
	"devDependencies": {
		"@commitlint/cli": "^17.3.0",
		"@commitlint/config-conventional": "^17.3.0",
		"@typescript-eslint/eslint-plugin": "^5.47.1",
		"@typescript-eslint/parser": "^5.47.1",
		"c8": "^7.12.0",
		"eslint": "^8.30.0",
		"husky": "^8.0.2",
		"lint-staged": "^13.1.0",
		"pwa-asset-generator": "^6.2.0",
		"stylelint": "^14.16.1",
		"typescript": "^4.9.4",
		"vite": "^4.0.3",
		"vite-plugin-chunk-split": "^0.4.7",
		"vite-plugin-html-env": "^1.2.7",
		"vite-plugin-pwa": "^0.14.0",
		"vitest": "^0.26.2"
	},
	"lint-staged": {
		"*.ts": [
			"eslint --ext .ts --fix",
			"vitest related"
		],
		"*.js": [
			"eslint --ext .js --fix",
			"vitest related"
		],
		"*.css": "stylelint --fix"
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"dependencies": {
		"@types/node": "^18.11.18"
	}
}
